" Ligthline
let g:lightline = {
  \ 'colorscheme': 'onedark',
  \ 'active': {
  \   'left': [ [ 'mode', 'paste' ],
  \             [ 'gitbranch', 'readonly', 'filename', 'modified' ] ]
  \ },
  \ 'component_function': {
  \   'gitbranch': 'LightlineGitbranch'
  \ },
  \ }

function! LightlineGitbranch() abort
    if exists('*fugitive#head')
        let branch = fugitive#head()
        return branch !=# '' ? 'î‚  '. branch : ''
    endif
    return fugitive#head()
endfunction

